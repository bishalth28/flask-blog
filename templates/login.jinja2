{% extends 'base.jinja2' %}

{% block head %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f7f9fc;
    }
    .contain {
        display: flex;
        flex-direction: column;
        width: 300px;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .flash-message {
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 4px;
        font-weight: bold;
        text-align: center;
        font-size: 14px;
    }
    .flash-message.success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    .flash-message.error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    input {
        margin: 5px 0;
        height: 35px;
        padding: 7px;
    }
    button {
        height: 35px;
        margin: 5px 0;
        background-color: skyblue;
        border: none;
        border-radius: 5px;
        color: #333;
        font-size: 16px;
        cursor: pointer;
    }
    button:hover {
        background-color: #333;
        color: white;
    }
    .signup {
        text-decoration: none;
        color: #6c5ce7;
    }
    .signup:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block content %}
<form method="POST">
    <div class="contain">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, msg in messages %}
                    <div class="flash-message {{ category }}">
                        {{ msg }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}

        <label>Username:</label>
        <input name="username" required><br>

        <label>Password:</label>
        <input type="password" name="password" required><br>

        <button type="submit">Login</button><br>
        
        <p style="text-align:center;">Don't have an account? <a href="{{ url_for('signup') }}" class="signup">Register</a></p>
    </div>
</form>
{% endblock %}
